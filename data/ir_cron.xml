<odoo>
  <data noupdate="1">
    <record id="cron_actualizar_costo_contable" model="ir.cron">
      <field name="name">Actualizar costo contable</field>
      <field name="model_id" ref="product.model_product_template"/>
      <field name="state">code</field>
      <field name="code">model.actualizar_costo_contable()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>
      <field name="nextcall" eval="(DateTime.now().replace(hour=19, minute=0, second=0)).isoformat()"/>
    </record>
  </data>
</odoo>